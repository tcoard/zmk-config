#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>


&mt {
    //  flavor = "tap-preferred";
    // tapping_term_ms = <200>;
};

&sk {
    ignore-modifiers;
};

/ {

    combos {
        compatible = "zmk,combos";
        combo_esc {
            timeout-ms = <50>;
            key-positions = <16 17>;
            bindings = <&kp ESC>;
        };

        combo_tab {
            timeout-ms = <50>;
            key-positions = <12 13>;
            bindings = <&kp TAB>;
        };

        combo_left_brace {
            timeout-ms = <50>;
            key-positions = <3 4>;
            bindings = <&kp LEFT_BRACE>;
        };

        combo_right_brace {
            timeout-ms = <50>;
            key-positions = <5 6>;
            bindings = <&kp RIGHT_BRACE>;
        };

        combo_left_parens {
            timeout-ms = <50>;
            key-positions = <13 14>;
            bindings = <&kp KP_LPAR>;
        };

        combo_right_parens {
            timeout-ms = <50>;
            key-positions = <15 16>;
            bindings = <&kp KP_RPAR>;
        };

        combo_left_bracket {
            timeout-ms = <50>;
            key-positions = <23 24>;
            bindings = <&kp LEFT_BRACKET>;
        };

        combo_right_bracket {
            timeout-ms = <50>;
            key-positions = <25 26>;
            bindings = <&kp RIGHT_BRACKET>;
        };

    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
            &kp Q &kp W &kp E &kp R &kp T       &kp Y    &kp U &kp I    &kp O   &kp P
            &kp A &kp S &kp D &kp F &kp G       &kp H    &kp J &kp K    &kp L   &kp DOUBLE_QUOTES
            &kp Z &kp X &kp C &kp V &kp B       &kp N    &kp M &kp CMMA &kp DOT &kp NON_US_BSLH
                              &mo 1 &kp SPC     &kp BKSP &mo 2
            >;
        };

        left_layer {
            bindings = <
            &none      &none     &none     &none       &none            &none     &none     &none     &none     &bt BT_NXT
            &sk LSHIFT &sk LCTRL &sk LALT  &sk LMETA   &kp TAB          &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT &none
            &none      &kp TILDE &kp GRAVE &kp KP_PLUS &kp KP_EQUAL     &kp MINUS &kp UNDER &kp SQT   &kp COLON &kp SEMICOLON
                                           &mo 1       &none            &kp ENTER &none
            >;
        };

        right_layer {
            bindings = <
            &kp EXCL  &kp AT    &kp HASH  &kp DLLR  &kp PRCT        &kp CRRT  &kp AMPS  &kp STAR  &kp LPAR  &kp RPAR
            &kp NUM_1 &kp NUM_2 &kp NUM_3 &kp NUM_4 &kp NUM_5       &kp NUM_6 &kp NUM_7 &kp NUM_8 &kp NUM_9 &kp NUM_0
            &kp F1    &kp F2    &kp F3    &kp F4    &kp F5          &kp F6    &kp F7    &kp F8    &kp F9    &kp F10
                                          &kp F11   &kp F12         &none     &mo 2
            >;
        };
    };
};
